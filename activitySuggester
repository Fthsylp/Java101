import  java.util.Scanner;

public class activitSuggester {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        int heat;

        System.out.print("What is heat calcius today: ");
        heat = input.nextInt();

        if (heat < 5) {
            System.out.println("You can go for ski");
        } else if (heat > 5 && heat < 25) {
            if (heat < 15) {
                System.out.println("You can go for cinema");
            } if (heat < 25) {
                System.out.println("You can go for picnic");
            }
        } else {
            System.out.println("You can go for swim");
        }
    }
}
